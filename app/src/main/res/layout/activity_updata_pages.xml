<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdataPages"
    android:background="@color/colorPrimary">
    <ScrollView
        android:layout_margin="10dp"

        android:background="@drawable/background"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="340dp"
                android:layout_marginEnd="15dp"
                android:layout_height="1dp"
                android:layout_marginStart="40dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/muli_bold"
                android:text="Редактирование данных"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="204dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/muli_bold"
                android:text="Номер группы:"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Nomer_gruppi_update"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/muli"
                android:inputType="text"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                tools:ignore="SpeakableTextPresentCheck">

            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/muli_bold"
                android:text="Биография:"
                android:layout_marginStart="30dp"
                android:textColor="@color/black"
                android:textSize="18sp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Nomer_gruppi_update" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Biografia_update"
                android:layout_width="320dp"
                android:layout_height="150dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/muli"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/muli_bold"
                android:text="Персональные данные:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Biografia_update" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/personal_data_update"
                android:layout_marginTop="20dp"
                android:layout_width="320dp"
                android:layout_height="150dp"
                android:fontFamily="@font/muli"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4">

            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/muli_bold"
                android:text="Личные характеристики:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/personal_data_update" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Xaracter_update"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/muli"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5">

            </com.google.android.material.textfield.TextInputEditText>

            <Button
                android:id="@+id/updateBtn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/gradient_button"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Редактировать"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Xaracter_update" />

            <View
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/updateBtn" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>