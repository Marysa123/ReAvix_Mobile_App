<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdataPages"
    android:background="@drawable/img">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/muli_bold"
        android:text="Заполните информацию о себе"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="950dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/background_addpage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="204dp"
                android:layout_height="30dp"
                android:layout_marginStart="36dp"
                android:fontFamily="@font/muli_bold"
                android:text="Ваш Id:"
                android:textAlignment="textStart"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Nomer_gruppi_update"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginStart="36dp"
                android:fontFamily="@font/muli"
                android:inputType="text"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7">

            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/muli_bold"
                android:text="Биография"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Nomer_gruppi_update" />

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/Biografia_update"
                android:layout_width="320dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/muli"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/muli_bold"
                android:text="Персональные данные"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Biografia_update" />

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/personal_data_update"
                android:layout_marginTop="20dp"
                android:layout_width="300dp"
                android:layout_height="140dp"
                android:fontFamily="@font/muli"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4">

            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/muli_bold"
                android:text="Личные характеристики"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/personal_data_update" />

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/Xaracter_update"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/muli"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5">

            </com.google.android.material.textfield.TextInputEditText>


            <Button
                android:id="@+id/updateBtn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/gradient_button"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Редактировать"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Xaracter_update" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>